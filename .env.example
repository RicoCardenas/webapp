APP_ENV=development
# Opcional: FLASK_ENV se sigue respetando si prefieres este nombre.
FLASK_ENV=development
# Cadena de conexión para producción (PostgreSQL recomendado)
# Ejemplo: postgresql://usuario:password@host:5432/ecuplot
# Deja en blanco en desarrollo/pruebas para usar el fallback automático SQLite.
DATABASE_URL=

# Clave secreta para sesiones Flask
SECRET_KEY=change-me-in-prod

# Lista separada por comas de orígenes permitidos para CORS (obligatorio en producción)
CORS_ORIGINS=https://app.example.com,https://admin.example.com
# Activa true solo si necesitas enviar credenciales/cookies en peticiones CORS
CORS_SUPPORTS_CREDENTIALS=false

# Límite de conexiones SSE simultáneas por usuario
SSE_MAX_CONNECTIONS_PER_USER=3

# Configuración de correo (opcional)
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=notifications@example.com
MAIL_PASSWORD=super-secret
MAIL_DEFAULT_SENDER=EcuPlot <notifications@example.com>

# Destinatarios para formularios de contacto (separados por comas)
CONTACT_RECIPIENTS=admin@example.com,support@example.com

# Rate Limiting - Protección contra abuso y ataques de fuerza bruta
# Storage: memory:// (por defecto, solo para desarrollo/instancia única)
# Para producción con múltiples workers, usa Redis: redis://localhost:6379/1
RATELIMIT_STORAGE_URI=memory://

# Límites de tasa por endpoint (formato: "N per UNIT" donde UNIT puede ser second, minute, hour, day)
RATELIMIT_LOGIN=10 per 5 minutes          # Login - protege contra fuerza bruta
RATELIMIT_REGISTER=5 per hour              # Registro - previene spam de cuentas
RATELIMIT_PASSWORD_RESET=3 per hour        # Reset de contraseña - previene abuso
RATELIMIT_EMAIL_VERIFY=5 per hour          # Verificación de email - previene spam
RATELIMIT_CONTACT=5 per hour               # Formulario de contacto - previene spam
RATELIMIT_UNLOCK_ACCOUNT=3 per hour        # Desbloqueo de cuenta - previene abuso

# --- Logging Configuration ---
# Nivel de log: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Si no se define, se auto-detecta: DEBUG en development, WARNING en test, INFO en production
# LOG_LEVEL=INFO

# Habilitar logs en formato JSON (recomendado para producción)
# Si no se define, se auto-detecta: true en production, false en development/test
# LOG_JSON_ENABLED=true
